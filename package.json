{
  "name": "wmapp",
  "version": "1.0.0",
  "description": "Warehouse Manegement application",
  "repository": "https://github.com/svolochj/WMapp-CAP.git",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "7.8.1",
    "@sap/hana-client": "2.22.27",
    "@sap/hdbext": "8.0.6",
    "@sap/xssec": "4.2.4",
    "express": "4.20.0",
    "passport": "0.7.0",
    "sap-hdbext-promisfied": "^2.202201.1"
  },
  "devDependencies": {
    "@sap/eslint-plugin-cds": "^3.0.4",
    "@sap/hdi-deploy": "^5.1.1",
    "@sap/ux-specification": "^1.100",
    "chai": "^5.1.0",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "eslint": "^9.11.1",
    "jest": "^29.3.1",
    "sqlite3": "^5"
  },
  "scripts": {
    "start": "cds run",
    "test": "jest --coverage",
    "undeploy": "cf undeploy wmapp --delete-services --delete-service-keys",
    "clean": "find . \\( -name dist -o -name node_modules -o -name resources -o -name gen -o -name package-lock.json -o -name mta_archives \\)  -exec rm -rv {} +"
  },
  "cds": {
    "hana": {
      "deploy-format": "hdbtable"
    },
    "requires": {
      "db": {
        "kind": "hana"
      },
      "uaa": {
        "kind": "xsuaa",
        "credentials": {}
      },
      "[development]": {
        "db": {
            "kind": "sqlite",
            "multitenance": false,
            "credentials": {
                "database": "developdb.db"
            }
        },
        "auth": "dummy"
      }
    }
  },
  "sapux": [
    "app/cat/uom",
    "app/cat/locations",
    "app/cat/products",
    "app/doc/receive",
    "app/doc/movement",
    "app/doc/issue",
    "app/reg/movements",
    "app/reg/stock"
  ]
}
